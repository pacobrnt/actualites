{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    {# Utilisation des classes Bootstrap pour centrer et styliser la carte #}
    <div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card shadow-lg" style="width: 100%; max-width: 400px;">
            <div class="card-body p-4">

                <h1 class="card-title text-center mb-4 fw-bold">Créer un Compte</h1>

                {# Affichage des erreurs globales #}
                {{ form_errors(registrationForm) }}

                {# form_start est un bloc Twig, nous lui appliquons des classes #}
                {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                {# Champ Email #}
                <div class="mb-3">
                    {{ form_row(registrationForm.email, {
                        'label': 'Adresse Email',
                        'attr': {'class': 'form-control', 'placeholder': 'votre.email@exemple.com'}
                    }) }}
                </div>

                {# Champ Mot de Passe #}
                <div class="mb-3">
                    {{ form_row(registrationForm.plainPassword, {
                        'label': 'Mot de Passe',
                        'attr': {'class': 'form-control', 'placeholder': 'Minimum 6 caractères'}
                    }) }}
                </div>

                {# Case à cocher (Conditions) #}
                <div class="mb-3 form-check">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                    <label class="form-check-label" for="registration_form_agreeTerms">
                        J'accepte les <a href="#" class="text-primary">conditions d'utilisation</a>
                    </label>
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>

                {# Bouton d'Enregistrement : AJOUT de btn-lg pour correspondre au login #}
                <button type="submit" class="btn btn-lg btn-warning w-100 mt-3">
                    S'inscrire
                </button>

                {{ form_end(registrationForm) }}

                <p class="mt-3 text-center text-muted small">
                    Déjà un compte ? <a href="{{ path('app_login') }}" class="text-warning fw-bold">Se connecter ici.</a>
                </p>

            </div>
        </div>
    </div>
{% endblock %}
