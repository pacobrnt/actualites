{# templates/favorite/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mes Articles Favoris{% endblock %}

{% block body %}
    <h1>❤️ Mes Articles Favoris</h1>

    {% if favorites is empty %}
        <p class="alert alert-info" role="alert" style="margin-top: 20px;">
            Vous n'avez pas encore d'articles favoris. Commencez par liker un article sur la <a href="{{ path('app_home') }}" class="alert-link">page d'accueil</a>.
        </p>
    {% else %}
        {# Grille de cartes pour les articles #}
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 30px;">
            {% for favorite in favorites %}

                {# Reconstruit l'objet article pour le template, en utilisant les données stockées #}
                {% set article = {
                    'url': favorite.url,
                    'title': favorite.title,
                    'image': favorite.image,
                    'source': {'name': favorite.sourceName},
                } %}

                {% set urlHash = favorite.url|hash %}

                <div class="article-card" id="article_card_{{ urlHash }}">

                    {# Inclusion du bouton J'aime - DIRECTEMENT dans article-card pour positionnement absolu #}
                    {# isLiked est toujours true ici car ce sont des favoris #}
                    {% include 'favorite/_like_button.html.twig' with {
                        'article': article,
                        'isLiked': true
                    } %}

                    <a href="{{ article.url }}" target="_blank" title="{{ article.title }}"
                       style="display: block; text-decoration: none; color: inherit;">

                        {# Zone Image #}
                        <div>
                            {% if article.image %}
                                <img src="{{ article.image }}" alt="{{ article.title }}" style="width: 100%; height: 200px; object-fit: cover;">
                            {% else %}
                                <div style="width: 100%; height: 200px; background-color: #f0f0f0; display: flex; align-items: center; justify-content: center; color: #666;">
                                    <span>Image non disponible</span>
                                </div>
                            {% endif %}
                        </div>

                        <div style="padding: 15px;">
                            {# Titre #}
                            <h2 style="font-size: 1.2em; margin-top: 0; margin-bottom: 10px; color: #343a40;">
                                {{ article.title }}
                            </h2>

                            {# Informations #}
                            <small style="display: block; color: #888; margin-bottom: 10px;">
                                Source: {{ article.source.name }} - Aimé le: {{ favorite.likedAt|date('d/m/Y H:i') }}
                            </small>
                            <p>Ceci est un article mis en favori. Cliquez pour lire l'original.</p>
                        </div>
                    </a>

                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
