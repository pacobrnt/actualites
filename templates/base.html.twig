{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Actualit√©s App{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    {% block stylesheets %}
        {# üö® INT√âGRATION DE BOOTSTRAP CSS via CDN #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

        {# Votre app.css peut √™tre inclus ici #}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">

        {# Style personnalis√© pour la hauteur principale et le footer #}
        <style>
            body {
                padding-bottom: 70px; /* Espace pour le footer fixe */
            }
            .min-vh-main {
                min-height: calc(100vh - 70px - 66px); /* 100vh - footer - header_height (approx) */
            }
        </style>
        {# Assurez-vous que les ic√¥nes (si utilis√©es, comme fas fa-tools) fonctionnent, sinon retirez la balise <i> #}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
        {# üö® INT√âGRATION DE BOOTSTRAP JS via CDN #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    {% endblock %}
</head>

<body class="bg-light">

{# ----------------- HEADER / NAVIGATION (Dark Mode √âL√âGANT) ----------------- #}
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
        <div class="container-fluid">

            {# Nom du site stylis√© #}
            <a class="navbar-brand fw-bolder fs-4 text-warning" href="{{ path('app_home') }}">
                üì∞ Actualit√©s App
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>


            <div class="d-flex align-items-center">

                {# Formulaire de Recherche (plus compact) #}
                <form action="{{ path('app_search') }}" method="GET" class="d-flex me-3">
                    <input class="form-control form-control-sm me-2" type="search" name="q" placeholder="Rechercher..." required aria-label="Search">
                    <button class="btn btn-sm btn-outline-warning" type="submit">üîç</button>
                </form>

                {# Liens d'Authentification et Administration #}
                {% if is_granted('ROLE_USER') %}
                    {# Bouton d'Administration avec ic√¥ne #}
                    <a href="{{ path('app_article_index') }}" class="btn btn-sm btn-outline-info me-2">
                        <i class="fas fa-tools"></i> Admin
                    </a>

                    {# Email de l'utilisateur #}
                    <span class="navbar-text me-3 text-secondary" style="font-size: 0.9rem;">
                        Bonjour, <strong class="text-white">{{ app.user.email }}</strong>
                    </span>

                    {# Bouton de D√©connexion #}
                    <a href="{{ path('app_logout') }}" class="btn btn-sm btn-danger">D√©connexion</a>
                {% else %}
                    {# üö® CORRECTION POUR LA COULEUR UNIFORME : Les deux sont btn-warning (jaune/orange) #}
                    <a href="{{ path('app_register') }}" class="btn btn-sm btn-warning me-2">S'inscrire</a>
                    <a href="{{ path('app_login') }}" class="btn btn-sm btn-warning">Se connecter</a>
                {% endif %}
            </div>
        </div>
    </nav>
</header>

{# ----------------- CONTENU PRINCIPAL ----------------- #}
<main class="container mt-5 mb-5 min-vh-main">
    {% block body %}{% endblock %}
</main>

{# ----------------- FOOTER FIXE ----------------- #}
<footer class="footer py-2 bg-dark border-top border-warning fixed-bottom">
    <div class="container text-center">
        <small class="text-muted text-warning">&copy; {{ 'now'|date('Y') }} Actualit√©s App - Propuls√© par Symfony & Bootstrap</small>
    </div>
</footer>

</body>
</html>
